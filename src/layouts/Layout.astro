---
import Header from "@/components/Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>
<style is:global>
  :root {
    color-scheme: light dark;
  }

  @media (prefers-color-scheme: dark) {
  }

  html {
    scroll-behavior: smooth;
  }
  body {
    display: flex;
    flex-direction: column;
    padding: 0;
    margin: 0;
    align-items: center;
    position: relative;
    font-family: "Onest", sans-serif;
    box-sizing: border-box;
    line-height: 1.5;
    overflow-x: hidden;
    overflow-y: scroll;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }

  @font-face {
    font-family: "Onest"; /* un nombre a utilizar posteriormente */
    src: url("../../public/font/Onest/static/Onest-Thin.ttf") format("truetype"); /* URL a la fuente thin */
    font-weight: 100; /* Thin */
  }

  @font-face {
    font-family: "Onest"; /* un nombre a utilizar posteriormente */
    src: url("../../public/font/Onest/static/Onest-Light.ttf")
      format("truetype"); /* URL a la fuente light */
    font-weight: 300; /* Light */
  }

  @font-face {
    font-family: "Onest"; /* un nombre a utilizar posteriormente */
    src: url("../../public/font/Onest/static/Onest-Regular.ttf")
      format("truetype"); /* URL a la fuente regular */
    font-weight: 400; /* Regular */
  }

  @font-face {
    font-family: "Onest"; /* un nombre a utilizar posteriormente */
    src: url("../../public/font/Onest/static/Onest-Medium.ttf")
      format("truetype"); /* URL a la fuente medium */
    font-weight: 500; /* Medium */
  }

  @font-face {
    font-family: "Onest"; /* un nombre a utilizar posteriormente */
    src: url("../../public/font/Onest/static/Onest-Regular.ttf")
      format("truetype"); /* URL a la fuente medium */
    font-weight: 600; /* Medium */
  }

  @font-face {
    font-family: "Onest"; /* un nombre a utilizar posteriormente */
    src: url("../../public/font/Onest/static/Onest-SemiBold.ttf")
      format("truetype"); /* URL a la fuente medium */
    font-weight: 700; /* Medium */
  }
  body {
  }
</style>

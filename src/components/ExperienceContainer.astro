---
interface Props {
  delay: string;
  className?: string;
  image?: string;
  title: string;
  subtitle: string;
  dates: string;
  useButton?: boolean;
  href?: string;
  buttonText?: string;
}
const {
  delay,
  className,
  image,
  title,
  subtitle,
  dates,
  href,
  buttonText,
  useButton = true,
} = Astro.props;
---

<section
  class={`group cursor-pointer to-animate delay h-full flex-1 rounded-xl ${className} opacity-0 overflow-hidden relative bg-transparent`}
>
  <div class="w-full h-full bg-black/50 absolute z-10 flex">
    <article
      class="w-3/4 h-3/4 m-auto flex flex-col justify-between items-center"
    >
      <section class="flex flex-col justify-center items-center text-white">
        <span class="text-3xl font-bold mb-2">{title.toUpperCase()}</span>
        <span class="text-lg">{subtitle}</span>
        <span class="text-xs">{dates}</span>
      </section>

      {
        useButton && (
          <a
            href={href}
            target="_blank"
            type="button"
            class="focus:outline-none text-white bg-[#0047ff] hover:bg-[#0040e4] focus:ring-4 focus:ring-[#0040e4] font-medium rounded-lg text-sm px-2 py-2.5 mb-2 w-fit"
          >
            {buttonText}
          </a>
        )
      }
    </article>
  </div>
  <img
    src={image}
    alt=""
    class="bg-cover w-full h-full group-hover:scale-110 transition-scale duration-300 ease-in-out"
  />
</section>

<style define:vars={{ delay }}>
  .delay {
    animation-delay: var(--delay);
    position: relative;
  }
</style>
